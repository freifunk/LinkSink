{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "fileMatch": [
    "bin/composer"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeSchedule": ["after 7am every weekday"],
      "schedule": ["after 6am every weekday"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeSchedule": ["after 7am every weekday"],
      "schedule": ["after 6am every weekday"]
    },
    {
      "matchFiles": ["bin/composer"],
      "matchPackageNames": ["composer"],
      "enabled": true,
      "updateTypes": ["patch", "minor", "major"],
      "addLabels": ["composer-update"],
      "commitMessageTopic": "Composer binary"
    }
  ]
}
