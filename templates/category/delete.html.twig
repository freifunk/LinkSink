{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Kategorie löschen</h1>
        <form method="post" action="{% if entity.id|default(0) > 0 %}{{ path('category_deleteconfirmed',{'slug':entity.slug}) }}{% else %}{{ path('category_show',{'slug':entity.slug}) }}{% endif %}">
            <div class="mb-3">
                <div class="alert alert-danger" role="alert">
                    Soll die Kategorie <strong>{{ entity.getName() }}</strong> wirklich gelöscht werden?
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" id="cancelbutton" onClick="history.go(-1);return true;">Abbrechen</a>
                <button type="submit" class="btn btn-danger">Löschen</button>
            </div>
        </form>
    </div>
{% endblock %}