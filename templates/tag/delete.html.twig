{% extends 'layout.html.twig' %}

{% block body -%}
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <form class="form" method="post" action="{% if entity.id|default(0) > 0 %}{{ path('tag_deleteconfirmed',{'slug':entity.slug}) }}{% else %}{{ path('tag_show',{'slug':entity.slug}) }}{% endif %}">
                    <div class="alert alert-danger" role="alert">
                        Soll das Tag <strong>{{ entity.getName() }}</strong> wirklich gelöscht werden?
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" onClick="history.go(-1);return true;">Abbrechen</button>
                        <button type="submit" class="btn btn-danger">Löschen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}